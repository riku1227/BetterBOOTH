{
    "manifest_version": 2,
    "name": "BetterBOOTH",
    "version": "1.0.0",
    "description": "BOOTHをちょっと便利にする拡張",
    "icons": {
        "16": "icon_16.png",
        "48": "icon_48.png",
        "128": "icon_128.png"
    },
    "permissions": [
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://booth.pm/*",
                "https://*.booth.pm/*"
            ],
            "js": [
                "better_booth.js"
            ]
        },
        {
            "matches": [
                "https://accounts.booth.pm/library*"
            ],
            "css": [
                "better_booth_library.css"
            ]
        }
    ],
    "options_ui": {
        "page": "options/options.html",
        "chrome_style": true,
        "open_in_tab": true
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
   }
}